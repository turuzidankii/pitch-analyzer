{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "运行音频音调分析工具 - 帮助",
            "type": "shell",
            "command": "python",
            "args": ["main.py", "--help"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "测试音调分析功能",
            "type": "shell",
            "command": "python",
            "args": ["test_analyzer.py"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "安装Python依赖",
            "type": "shell",
            "command": "pip",
            "args": ["install", "-r", "requirements.txt"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "分析单个音频文件",
            "type": "shell",
            "command": "python",
            "args": ["main.py", "${input:audioFile}", "--analyze-only", "-v"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "比较两个音频文件",
            "type": "shell",
            "command": "python",
            "args": ["main.py", "${input:audioFile1}", "${input:audioFile2}", "-v"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "分析音程变化",
            "type": "shell",
            "command": "python",
            "args": [
                "main.py", 
                "${input:audioFile}", 
                "--pitch-contour", 
                "--start-time", "${input:startTime}",
                "--end-time", "${input:endTime}",
                "--frame-size", "${input:frameSize}",
                "-v"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "测试音程分析功能",
            "type": "shell",
            "command": "python",
            "args": ["test_pitch_contour.py"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "测试科学音高记号法",
            "type": "shell",
            "command": "python",
            "args": ["test_scientific_notation.py"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "audioFile",
            "description": "选择要分析的音频文件",
            "default": "audio.wav",
            "type": "promptString"
        },
        {
            "id": "audioFile1",
            "description": "选择第一个音频文件",
            "default": "audio1.wav",
            "type": "promptString"
        },
        {
            "id": "audioFile2",
            "description": "选择第二个音频文件",
            "default": "audio2.wav",
            "type": "promptString"
        },
        {
            "id": "startTime",
            "description": "开始时间（格式: 1:30 或 90）",
            "default": "0",
            "type": "promptString"
        },
        {
            "id": "endTime",
            "description": "结束时间（格式: 1:30 或 90）",
            "default": "10",
            "type": "promptString"
        },
        {
            "id": "frameSize",
            "description": "分析帧大小（秒）",
            "default": "0.1",
            "type": "promptString"
        }
    ]
}